<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
tools:context="com.example.sheryarkhan.projectcity.activities.LocationAutoCompleteActivity"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginTop="8dp"
android:layout_marginStart="8dp"
android:layout_marginEnd="8dp"
    >


<EditText
    android:id="@+id/editTextSearchLocation"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:background="@drawable/feed_item_rounded_corner"
    android:hint="Search Location"
    android:paddingStart="12dp"
    android:drawableStart="@drawable/ic_loc"
    android:paddingEnd="40dp"
    android:textSize="20sp"
    android:maxLines="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintRight_toRightOf="parent" />

<ImageView
    android:id="@+id/imgRemoveTextFromSearch"
    android:layout_width="25dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
    app:layout_constraintRight_toRightOf="@+id/editTextSearchLocation"
    app:layout_constraintTop_toTopOf="@+id/editTextSearchLocation"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp" />

<android.support.v7.widget.RecyclerView
    android:id="@+id/autocompleteRecyclerView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/editTextSearchLocation"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent">

</android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>
